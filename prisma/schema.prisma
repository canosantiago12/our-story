datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Story {
  id        String       @id @default(uuid())
  title     String
  storyDate DateTime
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  images    StoryImage[]
}

model Album {
  id          String       @id @default(uuid())
  title       String
  description String?
  albumDate   DateTime
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  images      AlbumImage[]
  thumbnailId String?      @unique @map("thumbnail_id")
  thumbnail   Image?       @relation("AlbumThumbnail", fields: [thumbnailId], references: [id], onDelete: SetNull)
}

model Image {
  id         String       @id @default(uuid())
  url        String
  caption    String?
  uploadedAt DateTime     @default(now())
  albums     AlbumImage[]
  stories    StoryImage[]

  thumbnailAlbum Album? @relation("AlbumThumbnail")
}

model StoryImage {
  storyId String
  imageId String
  story   Story  @relation(fields: [storyId], references: [id], onDelete: Cascade)
  image   Image  @relation(fields: [imageId], references: [id], onDelete: Cascade)

  @@id([storyId, imageId])
}

model AlbumImage {
  albumId String
  imageId String
  album   Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)
  image   Image  @relation(fields: [imageId], references: [id], onDelete: Cascade)

  @@id([albumId, imageId]) // âœ… Composite primary key
}
